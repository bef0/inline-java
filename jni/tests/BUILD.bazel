load(
  "@io_tweag_rules_haskell//haskell:haskell.bzl",
  "haskell_test",
)

haskell_test(
    name = "spec",
    srcs = glob(['**/*.hs']),
    extra_srcs = ["@openjdk//:rpath"],
    compiler_flags = [
        "-optl-Wl,@$(location @openjdk//:rpath)",
        "-DHSPEC_DISCOVER=$(location @hspec-discover//:bin)",
    ],
    timeout = "short",
    tools = ["@hspec-discover//:bin"],
    deps = [
        "//jni",
        "@stackage//:base",
        "@stackage//:hspec",
        "@stackage//:singletons",
    ],
)
